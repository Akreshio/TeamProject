<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="v0.0.1-14-03-2022" author="s.maevsky">
        <createTable tableName="rates">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="usd" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="eur" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="rub" type="numeric">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v0.0.2-28-03-2022" author="s.maevsky">
        <addColumn tableName="rates">
            <column name="cad" type="numeric">
            </column>
            <column name="cny" type="numeric">
            </column>
            <column name="czk" type="numeric">
            </column>
            <column name="sek" type="numeric">
            </column>
            <column name="chf" type="numeric">
            </column>
            <column name="gbp" type="numeric">
            </column>
            <column name="uah" type="numeric">
            </column>
            <column name="pln" type="numeric">
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

